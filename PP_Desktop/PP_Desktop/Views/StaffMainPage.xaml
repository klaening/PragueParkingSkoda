<Page
    x:Class="PP_Desktop.Views.StaffMainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:model="using:PP_Desktop.Models"
    xmlns:local="using:PP_Desktop.Views"
    xmlns:viewModel="using:PP_Desktop.ViewModels"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"
                              MinWidth="300"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0">
            <TextBlock Text="List of Staff"
                       FontSize="50"/>

            <ListBox MinHeight="500"
                     HorizontalAlignment="Left"
                     MaxWidth="400"
                     ItemsSource="{x:Bind staffPage.StaffList}">
                <ListBox.ItemTemplate>
                    <DataTemplate x:DataType="model:Staff">
                        <TextBlock Text="{x:Bind StaffInfo}"/>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>

            <Button Content="Add Staff"
                    FontSize="50"/>

            <Button Content="Go back"
                    FontSize="50"
                    Click="Button_Click"/>
        </StackPanel>

        <StackPanel x:Name="StaffDetails" Grid.Column="1"
                    HorizontalAlignment="Left">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="2*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Row="0" Grid.ColumnSpan="2"
                           Text="Här ska det bindas Staff Name"
                           FontSize="50" FontWeight="Bold"/>

                <StackPanel Grid.Row="1" Grid.Column="0"
                            Orientation="Horizontal"
                            Margin="0,0,0,50">
                    <TextBlock Text="ID:"/>
                    <TextBlock Text=" Här ska det bindas ID nummer"/>
                </StackPanel>

                <TextBlock Grid.Row="2" Grid.Column="0" 
                           Text="Role:"/>
                <ComboBox x:Name="Departments" 
                          Grid.Row="2" Grid.Column="1"/>

                <TextBlock Grid.Row="3" Grid.Column="0" 
                           Text="Username:"/>
                <TextBlock Grid.Row="3" Grid.Column="1"
                           Text="Här ska det bindas Username"/>

                <TextBlock Grid.Row="4" Grid.Column="0"
                           Text="Phone number:"/>
                <TextBlock Grid.Row="4" Grid.Column="1"
                           Text="Här ska det bindas Phone Number"/>

                <TextBlock Grid.Row="5" Grid.Column="0"
                           Text="Email:"/>
                <TextBlock Grid.Row="5" Grid.Column="1"
                           Text="Här ska det bindas Email"/>
            </Grid>
        </StackPanel>
    </Grid>
</Page>
